<!--pages/me/me.wxml-->
<view class="page">
  <view class='weui-cells weui-cells_after-title' wx:if="{{!hasUserInfo}}">
    <view class="weui-cell">
      <button bindtap='login'>
        Login
      </button>
    </view>
  </view>
  <view class='weui-cells weui-cells_after-title' wx:else>
      <view class="weui-cell">
        <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
            <image src="{{userInfo.avatarUrl}}" style="width: 50px; height: 50px; display: block"/>
        </view>
        <view class="weui-cell__bd">
          <view>{{userInfo.nickName}}</view>
        </view>
    </view>
  </view>
</view>